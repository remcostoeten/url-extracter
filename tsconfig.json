{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false, // Changed from true to false
    "noEmit": false, // Changed from true to false
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true, // Changed from true to false
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@c/*": [
        "./src/components/*"
      ],
      "@core/*": [
        "./src/core/"
      ],
      "@ui/*": [
        "./src/components/ui/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
